extends ../layout

block content

	div(ng-controller="SwitchboardContoller")


		div(ng-hide="data.users.length") Loading all staff ...

		md-list(ng-cloak, layout="row", layout-wrap)

			md-list-item(
				flex=33
				ng-repeat="user in data.users"
				class="{{user.in ? 'person-in' : 'person-out'}}"
			)
				p {{ user.displayName }}
				md-switch(
					ng-change="toggle(user)"
					ng-model="user.in"
					aria-label="Switch 2"
					ng-true-value="true"
					ng-false-value="false"
					class="md-warn"
				) {{user.in ? 'In' : 'Out'}}